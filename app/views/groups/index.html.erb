<h2>Перечень товарных групп</h2>

<table>
  <tr>
    <th>Наименование группы</th>
    <th>Описание</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= group.discribe %></td>
    <td><%= link_to 'Просмотреть', group %></td>
    <td><%= link_to 'Редактировать', edit_group_path(group) %></td>
    <td><%= link_to 'Удалить', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

