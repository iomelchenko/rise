
	<div class="cart_title"> Ваша корзина </div>


	<table>
	    <%= render(cart.line_items) %>


	     <tr class= "total_line"> 
	          
	          <td colspan= "3" > Всего: </td>
	          <td class= "total_cell" > <%= number_to_currency(@cart.total_price, :unit => "грн. ", :separator => ",") %> </td>
	     </tr>	

	</table>
	<% unless request.fullpath == "/orders/new" %>
			<%= button_to "Оформить заказ", new_order_path, method: :get %>
			<%= button_to "Очистить корзину", @cart, method: :delete, confirm: "Вы уверены?", remote: true %>
	<% end %>
