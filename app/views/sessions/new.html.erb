<div class="rise_form">
  <% if flash[:alert] %>
      <p id="nitice"> <%= flash[:alert] %></p>
  <% end %>
<%= form_tag do %>
 
 <fieldset>
 	<legend> Введите, пожалуйста,  логин и пароль </legend>

 	<div>
       <%= label_tag :name, "Логин" %>
       <%= text_field_tag :name, params[:name] %>
 	</div>
 	<div>
       <%= label_tag :password, "Пароль" %>
       <%= password_field_tag :password, params[:password] %>
 	</div>
 	<div>
       <%= submit_tag "Login" %>
 	</div>
 </fieldset>
<% end %>
</div>
