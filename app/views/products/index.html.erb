<h2>Перечень продуктов каталога</h2>

<table>



<% @products.each do |product| %>

  <tr class=<%= cycle('list_line_odd', 'list_line_even') %>>
    <td>
      <%= image_tag(product.image.url, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
         <dt><%= product.title %></dt>
         <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">

    <%= link_to 'Прсмотреть / Добавить коды товаров', product %> <br/>
    <%= link_to 'Редактировать', edit_product_path(product) %> <br/>
    <%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить новый продукт', new_product_path %>
