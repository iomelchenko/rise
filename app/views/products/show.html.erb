<p id="notice"><%= notice %></p>

<p>
  <b>Товар:</b> </br>
  <%= @product.title %>
</p>

<p>
  <b>Описание:</b> </br>
  <%= sanitize(@product.description) %>
</p>

<p>
  <b>Группа:</b> </br>
  <%= @product.group.name %>
</p>

<p>
  <b>Подгруппа:</b> </br>
  <%= @product.subgroup.name %>
</p>

<% if @product.image? %>
	<p>
	  <%= image_tag @product.image.url %>
	  <br/>
	  <%= link_to @product.image.url, @product.image.url if session[:user_id]%>
	</p>

<% end %>

<p>
  <b>Цена:</b> </br>
  <span class ="price"> <%= number_to_currency(@product.price, :unit => "грн. ", :separator => ",") %> </span>
</p>


 <% if session[:user_id] %>
     <%= link_to 'Edit', edit_product_path(@product) %> |
     <%= link_to 'Back', products_path %>

  <% else %>

     <%= button_to 'Добавить в корзину', line_items_path(product_id: @product),remote: true %>
   </br>
     <%= link_to "Вернуться к каталогу", store_index_path %>
 <% end %>
