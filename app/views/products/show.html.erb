<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Group:</b>
  <%= @product.group.name %>
</p>

<p>
  <b>SubGroup:</b>
  <%= @product.subgroup.name %>
</p>

<% if @product.image? %>
	<p>
	  <%= image_tag @product.image.url %>
	  <br/>
	  <%= link_to @product.image.url, @product.image.url %>
	</p>

<% end %>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
