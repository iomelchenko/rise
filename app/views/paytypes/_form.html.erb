<%= form_for @paytype, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :"Тип платежа", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pay_type, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit submit_text_button, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => "Вернуться к перечню"),
                paytypes_path, :class => 'btn' %>
  </div>
<% end %>
